// label
// =================
.ui-label{
  font-style: italic;
  color: #ffffff;
  font-size: .1rem;
  padding: .02rem .05rem;
  vertical-align: middle;
  border-radius: .02rem;
  margin-right .05rem
  white-space nowrap
}
.label-orange
  background-color #fdbd4d
.ui-label-grey
  background-color #e6e6e6
  color #999999
  font-style normal
.label-black
  background-color black
  opacity .6
  position absolute
  left 0
  bottom 0
  z-index 3
  font-style normal
  font-size .1rem
.label-pink
  background-color #ff907b
  color #ffffff
  font-style normal
  position absolute
  right 0
  bottom 0
  margin 0
.ui-label-pink
  background-color #fcdad1
  color #fd8f7b
  font-style normal
.ui-label-green
  display inline-block
  font-style normal
  background-color #96f69d
  color #27992f
  font-size .12rem
.label-green
  display inline-block
  font-style normal
  background-color #5dda66
  color #ffffff

.label-catalog
  display inline-block
  height .2rem
  line-height .2rem
  background-color #ff907b
  color #fff
  font-style normal
  padding 0 .05rem


// tab选项卡
// =================
.ui-tab
  display flex
  border-bottom .01rem solid #dddddd
  .tab
    flex 1
    text-align center
    padding-top .1rem
    span
      display inline-block
      font-size .16rem
      margin-bottom -.01rem
      padding-bottom .05rem
    &.active
      span
        color #fd8f7b
        border-bottom .02rem solid #fd8f7b

    .dot
      display inline-block
      width .05rem
      height .05rem
      background-color #ff704c
      vertical-align super
      border-radius 100%
