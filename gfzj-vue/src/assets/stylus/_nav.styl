// 底部导航条样式
// =====================
.nav-menu
  width: 100%;
  display flex
  height: nav-height;
  background-color: nav-bg-color;
  border-top .01rem solid #dddddd
  position: fixed;
  left 50%
  bottom: 0;
  z-index: 999;
  overflow hidden
  max-width 800px
  transform translateX(-50%)
  a
    display block
    flex: 1;
    color: nav-a-color;
    text-align: center;
    font-style:normal;
    -webkit-text-stroke-width: 0px!important;
    p
      font-size: 14px;
      line-height: 16px;
      -webkit-font-smoothing: antialiased;
      -webkit-text-stroke-width: 0.2px;
      -moz-osx-font-smoothing: grayscale;
    .icon
      vertical-align middle
    //background-size 80%
    span
      vertical-align middle
      font-size: .14rem;
      line-height: .16rem;

  .icon
    display inline-block
    width .4rem
    height .5rem
    background-size auto 50%


//图标
.icon-hot
  background url("./assets/img/icon-hot.png") no-repeat center center
.icon-album
  background url("./assets/img/icon-album.png") no-repeat center center
.icon-home
  background url("./assets/img/icon-home.png") no-repeat center center


//current状态
for type in index
  .{type}-page
    .nav-hot
      .icon-hot
        background url("./assets/img/icon-hot-active.png") no-repeat center center
        background-size auto 50%
      span
        color nav-aCurrent-color

for type in album
  .{type}-page
    .nav-album
      .icon-album
        background url("./assets/img/icon-album-active.png") no-repeat center center
        background-size auto 50%
      span
        color nav-aCurrent-color

for type in home
  .{type}-page
    .nav-home
      .icon-home
        background url("./assets/img/icon-home-active.png") no-repeat center center
        background-size auto 50%
      span
        color nav-aCurrent-color

.login-page
  background-color #fd8f7b
  .nav-menu
    display none
