//图标
// =======================

.icon
  display inline-block

.icon-return
  width .5rem
  height .5rem
  background url("./assets/img/icon-return.png") no-repeat center center
  background-size 20%
  position absolute
  left 0
  top 0
  z-index 9
.icon-share
  width .5rem
  height .5rem
  background url("./assets/img/icon-share.png") no-repeat center center
  background-size 48%
  position absolute
  right 0
  top 0
  z-index 9

.icon-light
  width .24rem
  height .24rem
  background url("./assets/img/icon-light.png") no-repeat .1rem center
  background-size 45%

.btn-wrap
.btn-wrap-s
  display inline-block
  vertical-align middle
  margin 0 .05rem

.btn-upload
.btn-reset
  width .5rem
  height .5rem
  border-radius 100%
  border .02rem solid #dddddd

.btn-reset
  background url("./assets/img/icon-reset.png") no-repeat center center #f7f7f7
  background-size 45%

.btn-upload
  background url("./assets/img/icon-upload.png") no-repeat center center #f7f7f7
  background-size 45%

.btn-start
  width 1rem
  height 1rem
  border-radius 100%
  border .04rem solid #dddddd
  background url("./assets/img/icon-record.png") no-repeat center .2rem #f7f7f7
  background-size 25%
  position relative
  p
    width 100%
    font-size .13rem
    position absolute
    left 0
    bottom 0

