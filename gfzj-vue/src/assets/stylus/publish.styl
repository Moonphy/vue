// 简介：表单页样式
//==============================
.row-flex
  display flex
  justify-content space-between
  .form-row
    &:first-child
      padding-right 1rem
    &:last-child
      padding-left 1rem

.form-row
  width 100%
  padding 0.05rem .2rem
  box-sizing border-box
  color black
  text-align left
  textarea
  input
  .input-row
    width 100%
    height .4rem
    padding 0.05rem .1rem
    font-size .14rem
    box-sizing border-box
    border .01rem solid #dddddd
    background-color white
    border-radius 0.04rem
  textarea
    height auto
    resize none
  .input-row
    position relative
    height auto
    padding .1rem .2rem
    .btn
      position relative
      input[type="file"]
        width 100%
        height 100%
        position absolute
        left 0
        top 0
        z-index 9
        opacity 0
  .ui-avatar
    width .7rem
    height .7rem
    margin .05rem
  .ui-avatar-c
    padding .06rem
    background url("../assets/img/previewAvatar-c.png") 0 0
    background-size cover

  .pay-set
    width 46%
    margin .05rem
    height .4rem
    line-height .3rem
    padding 0.05rem .1rem
    font-size .14rem
    border .01rem solid #fd8f7b
    border-radius .04rem
    color #fd704c
    text-align center
    &.selected
      background-color #fd704c
      color #ffffff
.ui-over
  width 100%
  height 100%
  border-radius 100%
  overflow hidden

.ml-20
  margin-left 10%
.btn-stop
  width 1rem
  height 1rem
  border .04rem solid #ff704c
  border-radius 100%
  background url("../assets/img/icon-record-stop.png") no-repeat center .3rem #ffdbd2
  background-size 25%
  .font-pink
    color #ff704c!important
    width 100%
    font-size 0.13rem
    position absolute
    left: 0
    bottom 0
.btn-play
  width 1rem
  height 1rem
  border .04rem solid #5aacff
  border-radius 100%
  background url("../assets/img/icon-record-play.png") no-repeat center .25rem #d2f1ff
  background-size 25%
  .font-pink
    color #5aacff!important
    width 100%
    font-size 0.13rem
    position absolute
    left: 0
    bottom 0
