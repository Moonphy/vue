// ==================================================
// 定制
// ==================================================

html
  height 100%

.fixed-page
  height 100%

  body
    height 100%



if responsive
  // 响应式设置
  @media only screen and (min-width: 320px)
    html
      font-size 100px

  @media only screen and (min-width: 480px)
    html
      font-size 130px

  /*@media only screen and (min-width: 640px)
    html
      font-size 200px

  @media only screen and (min-width: 800px)
    html
      font-size 250px*/

else
  html
    font-size 100px

body
  height 100%
  margin 0 auto
  font-size .14rem
  color font-color
  line-height default-line-height
  max-width 800px
// 超链接
// ------------------------------
a
  text-decoration none
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  // -webkit-user-select none
  // -webkit-touch-callout none
  color link-color

  &:visited
    color link-color

// 修正字体
// ------------------------------
i
em
  font-style normal
