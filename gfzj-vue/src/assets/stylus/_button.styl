// 元件：按钮
// ------------------------------

.btn
  display: inline-block;
  width 60%
  border: none
  border-radius .06rem
  outline none
  font-size .2rem
  padding .08rem .1rem
  line-height .24rem
  text-align center
  //white-space: nowrap
  vertical-align: middle
  touch-action manipulation
  box-sizing border-box
  margin 0.05rem auto
  background-color #f6f6f6
  &.disabled
    background #D9D9D9
    color gray-light

  &:active
    box-shadow inset 0 .02rem .03rem rgba(0, 0, 0, .3)

  &:visited
    color #ffffff


.btn-block
  display block
  width 100%

.btn-primary
  background #5dda66
  color #ffffff

  &.active
    background darken(@background, 8%)

.btn-trans
  background-color transparent
  border-radius .04rem
  font-size .12rem
  line-height 1.2
  border .01rem solid #ffffff
  padding .04rem .05rem
  &:visited
    color #ffffff